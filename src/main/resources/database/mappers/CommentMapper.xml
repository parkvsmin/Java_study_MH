<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.home.bankBook.CommentDAO">

	<insert id="setCommentAdd"
		parameterType="com.iu.home.bankBook.BankBookCommentDTO">
		<selectKey keyProperty="num" order="BEFORE"
			resultType="Long">
			SELECT BOARD_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO BB_COMMENT
		(NUM,TITLE,WRITER,CONTENTS)
		VALUES(#{num},#{title},#{writer},#{contents})
	</insert>

	<select id="commentList" resultType="BankBookCommentDTO"
		parameterType="com.iu.home.util.Pager">
		SELECT * FROM BB_COMMENT
	</select>

	<insert id="setUpdate" parameterType="BankBookCommentDTO">
		UPDATE BB_COMMENT SET
		CONTENTS=#{contents} WHERE NUM=#{num}
	</insert>

	<delete id="setDelete" parameterType="BankBookCommentDTO">
		DELETE BB_COMMENT WHERE
		NUM=#{num}
	</delete>

</mapper>
	
	
	
	
	