<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.iu.home.board.notice.NoticeDAO">
    <select id="getList"
    resultType="NoticeDTO">
    SELECT NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT
    FROM NOTICE
    ORDER BY NUM DESC
    </select>
    
    <select id="getDetail"
    parameterType="BoardDTO"
    resultType="NoticeDTO">
    SELECT * FROM NOTICE WHERE NUM = #{num}
    </select>
    
    <insert id="setAdd"
    parameterType="BoardDTO">
   	INSERT INTO NOTICE (NUM,TITLE,WRITER,CONTENTS,REGDATE,HIT)
   	VALUES(BOARD_SEQ.NEXTVAL, #{title}, #{writer}, #{contents}, SYSDATE, 1)    
    
    </insert>
    
    <insert id="setUpdate"
    parameterType="BoardDTO">
    UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
    </insert>
    
    <delete id="setDelete"
    parameterType="BoardDTO">
    DELETE NOTICE WHERE NUM = #{num}
    </delete>
    
    </mapper>
    
    